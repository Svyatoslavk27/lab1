@model LibraryDomain.Model.ReadersBook

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ReadersBook</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReaderId" class="control-label"></label>
                <select asp-for="ReaderId" class ="form-control" asp-items="ViewBag.ReaderId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Issue" class="control-label"></label>
                <input asp-for="Issue" class="form-control" type="date" min="1950-01-01" max="@DateTime.Now.AddYears(10).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Issue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanReturn" class="control-label"></label>
                <input asp-for="PlanReturn" class="form-control" type="date" min="1950-01-01" max="@DateTime.Now.AddYears(10).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="PlanReturn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class ="form-control" asp-items="ViewBag.StatusId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FactReturn" class="control-label"></label>
                <input asp-for="FactReturn" class="form-control" type="date" min="1950-01-01" max="@DateTime.Now.AddYears(10).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="FactReturn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
